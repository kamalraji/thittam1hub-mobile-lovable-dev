{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
      "files": "src/components/doodles/**/*.{ts,tsx}",
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "jsxSingleQuote": false
      }
    },
    {
      "files": "src/styles/**/*.css",
      "options": {
        "printWidth": 120,
        "singleQuote": false
      }
    }
  ]
}
